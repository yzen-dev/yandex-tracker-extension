{
  "manifest_version": 3,
  "name": "YoTracker",
  "description": "Дополнительный функционал трекера",
  "version": "1.0",
  "icons": {
    "128": "assets/icons/icon-tools.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://tracker.yandex.ru/*"
      ],
      "js": [
        "background.js"
      ]
    }
  ],
  "action": {
    "default_title": "YoTracker",
    "default_icon": "assets/icons/icon-tools.png"
  }
}
